{
  "extends": "@tsconfig/svelte/tsconfig.json",
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowJs": true,
    "checkJs": false,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "$lib/*": ["src/lib/*"]
    },
    "types": ["svelte"]
  },
  "include": ["src/**/*", "src/**/*.svelte", "src/**/*.d.ts", "*.config.ts", "*.config.js"],
  "exclude": ["node_modules", "dist"]
}

